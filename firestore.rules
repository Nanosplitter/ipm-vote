rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /ipms/{ipmId} {
      allow get: if true;
      allow create: if request.resource.data.numInputs == 0 && request.resource.data.totalPoints == 0;
      allow update: if request.resource.data.numInputs == 0 && request.resource.data.totalPoints == 0;
      allow update: if request.resource.data.numInputs == resource.data.numInputs + 1 && request.resource.data.totalPoints > resource.data.totalPoints;
    }
  }
}